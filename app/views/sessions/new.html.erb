<% content_for :title, "Sign In" %>

<div class="container">
  <div class="form-container">
    <h1>Sign In</h1>

    <%= form_with url: signin_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, required: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, required: true, class: "form-control" %>
      </div>

      <div class="form-actions">
        <%= form.submit "Sign In", class: "btn btn-primary" %>
        <%= link_to "Don't have an account? Sign Up", signup_path, class: "btn btn-link" %>
      </div>
    <% end %>
  </div>
</div>